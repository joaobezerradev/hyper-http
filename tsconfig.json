{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "outDir": "@hyper",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
